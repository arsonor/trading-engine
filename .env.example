# ===========================================
# Trading Engine Configuration
# ===========================================
# Copy this file to .env and fill in your values
#
# NOTE: This .env file is for LOCAL DEVELOPMENT only.
# When using docker-compose, environment variables are set
# directly in docker-compose.yml and this file is ignored.

# Application
APP_ENV=development
DEBUG=true

# Database
# For local development with SQLite:
DATABASE_URL=sqlite+aiosqlite:///./trading_engine.db
# For local development with PostgreSQL (if running postgres locally):
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trading_engine
# NOTE: For Docker, DATABASE_URL is set in docker-compose.yml (uses 'db' as host, not 'localhost')

# Alpaca Markets API
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend (Vite)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
